<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class= "text-center"><%= @course.title %></h1>
  <hr />
    <%= image_tag @course.image, class: 'img-responsive' %>
  <hr />
  <br />
  <div class="col-xs-12 text-center">
    <h3 class="text-center">Fee:</h3>
      <br />
      <span class="label label-default">
        <%= number_to_currency @course.cost %>
      </span>

      <%if current_user && current_user == @course.user %>
        <br />
        <br />
      <%= link_to 'Admin', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
     <% end %>
  </div>
  <br class="clr"></br>

  <br />

  <div class ="col-xs-12 text-center">
    <% if current_user && current_user.enrolled_in?(@course) %>
      <h3 class="label label-info">You Are Enrolled!</h3>
    <% else %>
      <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary btn-lg', method: :post %>
    <% end %>
  </div>

<div class="col-xs-12 text-justify">
  <br />
  <%= @course.description %>
  <hr />
</div>


  <div class="col-xs-12">
    <% @course.sections.each do |section| %>
      <br /><br />
      <div class="section">
        <h3>
          <b><%= section.title %></b>
        </h3>
        <% section.lessons.each do |lesson| %>
        <div class="col-xs-12 col-sm-6">
          <div class="lesson text-center">
            <br />
            <%= link_to lesson_path(lesson) do %>
            <b><%= lesson.title %></b>
            <br />
            <%= lesson.subtitle %>
            <% end %>
          </div>
        </div>
        <% end %>
        <br class="clr" />
      </div>
    <% end %>
</div>
</div>
